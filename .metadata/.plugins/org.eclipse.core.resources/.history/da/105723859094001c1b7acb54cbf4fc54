version: 0.2

phases:
  install:
    runtime-versions:
      docker: 18
  pre_build:
    commands:
      - echo "Pre_build"
      - echo "Logging in to Amazon ECR"
      - $(aws ecr get-login  --no-include-email --region us-east-1)
  build:
    commands:
      - echo "Build"
      - echo "Entered build phase"
      - echo "Building Java"
      - cd  StudentService
      - mvn install
      - docker build -t studentservice:latest .
      - docker tag studentservice:latest 861193390967.dkr.ecr.us-east-1.amazonaws.com/student-registry:student

  post_build:
    commands:
      - echo "Post_build"
      - docker push 861193390967.dkr.ecr.us-east-1.amazonaws.com/student-registry:student
      - printf '[{"name":"auth-container","imageUri":"%s"}]' 861193390967.dkr.ecr.us-east-1.amazonaws.com/student-registry > taskdefinition.json
      - cat taskdefinition.json

artifacts:
  files:
    - StudentService/taskdefinition.json